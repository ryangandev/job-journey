generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum JobType {
  on_site
  remote
}

enum JobStatus {
  applied
  interviewing
  offered
  rejected
  ghosted
}

model Application {
  id               String    @id @default(uuid())
  company          String
  title            String
  location         String
  type             JobType
  status           JobStatus
  isFavorite       Boolean
  link             String
  replied          Boolean
  interviewAquired Boolean
  applicationQA    Json[]
  updates          String[]
  appliedAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@map("applications")
}
